/* GENERAL */

* {
    box-sizing: border-box;
    font-family: 'Source Sans Pro';
    transition: background 0.25s;
}

.container {
    color: white;
}

.navbar {
    border: none;
}

.submit-button {
    background: #1f8a70;
    border: none;
    height: 40px;
    font-size: 20px;
    border-radius: 2px;
} .submit-button:hover {
    background: #219478;
}

/* HOME PAGE */

.white-text {
    color: white;
}

.h1-subtitle {
    font-size: 20px;
    font-style: italic;
}

.search-label {
    font-size: 22px;
    font-weight: 100;
}

.searchbar {
    background: #1f8a70;
    border: none;
    width: 100%;
    height: 60px;
    padding: 10px;
    font-size: 28px;
    color: white;
    border-radius: 4px;
    box-shadow: inset 0px 0px 15px rgba(190, 219, 57, 0.32);
}

.search-result {
    display: block;
    width: 100%;
    background: #6F8318;
    height: 49px;
    font-size: 19px;
    padding: 10px;
    color: #BEBEBE;
    border-bottom: solid 1px #9EB62F;
} .search-result:hover, .highlighted-result {
    background: #788E16;
    color: inherit;
    text-decoration: none;
}

.highlighted-character {
    color: white;
    font-weight: bold;
}

